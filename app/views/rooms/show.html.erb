<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
  <div class="banner-content">
    <h1><%= @room.title %></h1>
    <p><%= @room.description %></p>
    <%= link_to "View all rooms", rooms_path, class: "btn btn-danger btn-lg" %>
    <%= link_to "Edit", edit_room_path(@room), class: "btn btn-danger btn-lg" %>
    <%= link_to "Delete", room_path(@room), method: :delete, data: {confirm: "Got something better to do?"}, class: "btn btn-danger btn-lg" %>
  </div>
</div>
